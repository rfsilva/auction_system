			"name": "Relatórios de Comissões",
			"item": [
				{
					"name": "Relatório de Comissões - Mês Atual",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Calcular primeiro e último dia do mês atual",
									"const now = new Date();",
									"const firstDay = new Date(now.getFullYear(), now.getMonth(), 1);",
									"const lastDay = new Date(now.getFullYear(), now.getMonth() + 1, 0);",
									"",
									"// Formatar datas no formato ISO (YYYY-MM-DD)",
									"const formatDate = (date) => {",
									"    return date.toISOString().split('T')[0];",
									"};",
									"",
									"pm.environment.set('current_month_start', formatDate(firstDay));",
									"pm.environment.set('current_month_end', formatDate(lastDay));"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has commission report structure\", function () {",
									"    const data = pm.response.json().data;",
									"    pm.expect(data).to.have.property('periodo');",
									"    pm.expect(data).to.have.property('resumo');",
									"    pm.expect(data).to.have.property('porContrato');",
									"});",
									"",
									"pm.test(\"Period information is correct\", function () {",
									"    const periodo = pm.response.json().data.periodo;",
									"    pm.expect(periodo).to.have.property('inicio');",
									"    pm.expect(periodo).to.have.property('fim');",
									"    pm.expect(periodo).to.have.property('descricao');",
									"});",
									"",
									"pm.test(\"Summary has all required fields\", function () {",
									"    const resumo = pm.response.json().data.resumo;",
									"    pm.expect(resumo).to.have.property('totalComissoes');",
									"    pm.expect(resumo).to.have.property('totalVendas');",
									"    pm.expect(resumo).to.have.property('numeroTransacoes');",
									"    pm.expect(resumo).to.have.property('taxaMediaComissao');",
									"    pm.expect(resumo).to.have.property('comissoesRealizadas');",
									"    pm.expect(resumo).to.have.property('comissoesProjetadas');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/contratos/comissoes?inicio={{current_month_start}}&fim={{current_month_end}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
