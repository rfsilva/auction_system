		{
			"name": "Testes de Performance",
			"item": [
				{
					"name": "Performance - Estatísticas Múltiplas Chamadas",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response time is acceptable (cache effect)\", function () {",
									"    // Primeira chamada pode ser mais lenta, mas subsequentes devem ser rápidas",
									"    pm.expect(pm.response.responseTime).to.be.below(1000);",
									"});",
									"",
									"pm.test(\"Data consistency across calls\", function () {",
									"    const data = pm.response.json().data;",
									"    ",
									"    // Armazenar dados da primeira chamada para comparação",
									"    if (!pm.environment.get('first_call_total')) {",
									"        pm.environment.set('first_call_total', data.totalContratos.toString());",
									"    } else {",
									"        // Verificar consistência (dados devem ser iguais devido ao cache)",
									"        const firstCallTotal = parseInt(pm.environment.get('first_call_total'));",
									"        pm.expect(data.totalContratos).to.equal(firstCallTotal);",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
