				{
					"name": "Obter Estatísticas de Contratos",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has success structure\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('success', true);",
									"    pm.expect(jsonData).to.have.property('data');",
									"    pm.expect(jsonData).to.have.property('timestamp');",
									"});",
									"",
									"pm.test(\"Statistics data is complete\", function () {",
									"    const data = pm.response.json().data;",
									"    pm.expect(data).to.have.property('totalContratos');",
									"    pm.expect(data).to.have.property('contratosPorStatus');",
									"    pm.expect(data).to.have.property('vendedoresAtivos');",
									"    pm.expect(data).to.have.property('receitaProjetadaMes');",
									"    pm.expect(data).to.have.property('receitaRealizadaMes');",
									"    pm.expect(data).to.have.property('taxaMediaComissao');",
									"    pm.expect(data).to.have.property('contratosVencendo30Dias');",
									"});",
									"",
									"pm.test(\"Response time is less than 500ms\", function () {",
									"    pm.expect(pm.response.responseTime).to.be.below(500);",
									"});",
									"",
									"pm.test(\"Contracts by status has all statuses\", function () {",
									"    const data = pm.response.json().data;",
									"    const statusList = ['DRAFT', 'ACTIVE', 'EXPIRED', 'CANCELLED', 'SUSPENDED'];",
									"    ",
									"    statusList.forEach(status => {",
									"        pm.expect(data.contratosPorStatus).to.have.property(status);",
									"    });",
									"});"
								],
								"type": "text/javascript"
							}
						}
