		{
			"name": "Criar Lance - Samsung Galaxy S23",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200 or 201\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
							"});",
							"",
							"pm.test(\"Response has success field\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('success');",
							"    pm.expect(jsonData.success).to.be.true;",
							"});",
							"",
							"pm.test(\"Lance created with correct data\", function () {",
							"    const jsonData = pm.response.json();",
							"    const lance = jsonData.data;",
							"    pm.expect(lance).to.have.property('id');",
							"    pm.expect(lance).to.have.property('produtoId');",
							"    pm.expect(lance).to.have.property('userId');",
							"    pm.expect(lance).to.have.property('value');",
							"    pm.expect(lance).to.have.property('timestamp');",
							"    pm.expect(lance.value).to.be.a('number');",
							"    pm.expect(lance.value).to.be.above(0);",
							"});",
							"",
							"pm.test(\"Lance has sequence number\", function () {",
							"    const jsonData = pm.response.json();",
							"    const lance = jsonData.data;",
							"    pm.expect(lance).to.have.property('sequenceNumber');",
							"    pm.expect(lance.sequenceNumber).to.be.a('number');",
							"});",
							"",
							"// Salvar ID do lance para testes posteriores",
							"pm.test(\"Save lance ID for later tests\", function () {",
							"    const jsonData = pm.response.json();",
							"    if (jsonData.success && jsonData.data.id) {",
							"        pm.environment.set('lanceId', jsonData.data.id);",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Gerar valor de lance ligeiramente superior ao atual",
							"const currentPrice = 3250.00; // Preço atual do Samsung",
							"const increment = 50.00;",
							"const newBidValue = currentPrice + increment;",
							"pm.environment.set('newBidValue', newBidValue);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{authToken}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "{{contentType}}",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "{{acceptType}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"produtoId\": \"{{produtoId}}\",\n    \"value\": {{newBidValue}},\n    \"currency\": \"BRL\",\n    \"proxyBid\": false\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/lances",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"lances"
					]
				},
				"description": "Cria um novo lance no produto Samsung Galaxy S23 Ultra."
			}
