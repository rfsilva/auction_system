		{
			"name": "Listar Lances por Produto - Samsung",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has success field\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('success');",
							"    pm.expect(jsonData.success).to.be.true;",
							"});",
							"",
							"pm.test(\"Response has paginated lance data\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.data).to.have.property('content');",
							"    pm.expect(jsonData.data).to.have.property('totalElements');",
							"    pm.expect(jsonData.data.content).to.be.an('array');",
							"});",
							"",
							"pm.test(\"Lances are ordered by timestamp desc\", function () {",
							"    const jsonData = pm.response.json();",
							"    const lances = jsonData.data.content;",
							"    if (lances.length > 1) {",
							"        for (let i = 0; i < lances.length - 1; i++) {",
							"            const current = new Date(lances[i].timestamp);",
							"            const next = new Date(lances[i + 1].timestamp);",
							"            pm.expect(current.getTime()).to.be.at.least(next.getTime());",
							"        }",
							"    }",
							"});",
							"",
							"pm.test(\"All lances belong to the same product\", function () {",
							"    const jsonData = pm.response.json();",
							"    const lances = jsonData.data.content;",
							"    const expectedProdutoId = pm.environment.get('produtoId');",
							"    lances.forEach(lance => {",
							"        pm.expect(lance.produtoId).to.equal(expectedProdutoId);",
							"    });",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
