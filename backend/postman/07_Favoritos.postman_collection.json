		{
			"name": "Adicionar Samsung aos Favoritos",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200 or 201\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
							"});",
							"",
							"pm.test(\"Response has success field\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('success');",
							"    pm.expect(jsonData.success).to.be.true;",
							"});",
							"",
							"pm.test(\"Favorito created with correct data\", function () {",
							"    const jsonData = pm.response.json();",
							"    const favorito = jsonData.data;",
							"    pm.expect(favorito).to.have.property('id');",
							"    pm.expect(favorito).to.have.property('userId');",
							"    pm.expect(favorito).to.have.property('produtoId');",
							"    pm.expect(favorito).to.have.property('createdAt');",
							"    pm.expect(favorito.produtoId).to.equal(pm.environment.get('produtoId'));",
							"});",
							"",
							"// Salvar ID do favorito para testes posteriores",
							"pm.test(\"Save favorito ID for later tests\", function () {",
							"    const jsonData = pm.response.json();",
							"    if (jsonData.success && jsonData.data.id) {",
							"        pm.environment.set('favoritoId', jsonData.data.id);",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
