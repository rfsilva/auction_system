		{
			"name": "Listar Meus Favoritos",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has success field\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('success');",
							"    pm.expect(jsonData.success).to.be.true;",
							"});",
							"",
							"pm.test(\"Response has paginated data\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.data).to.have.property('content');",
							"    pm.expect(jsonData.data).to.have.property('totalElements');",
							"    pm.expect(jsonData.data).to.have.property('totalPages');",
							"    pm.expect(jsonData.data.content).to.be.an('array');",
							"});",
							"",
							"pm.test(\"Favoritos have required fields\", function () {",
							"    const jsonData = pm.response.json();",
							"    const favoritos = jsonData.data.content;",
							"    favoritos.forEach(favorito => {",
							"        pm.expect(favorito).to.have.property('id');",
							"        pm.expect(favorito).to.have.property('produtoId');",
							"        pm.expect(favorito).to.have.property('createdAt');",
							"        // Dados do produto incluídos",
							"        pm.expect(favorito).to.have.property('produto');",
							"        pm.expect(favorito.produto).to.have.property('title');",
							"        pm.expect(favorito.produto).to.have.property('currentPrice');",
							"        pm.expect(favorito.produto).to.have.property('status');",
							"    });",
							"});",
							"",
							"pm.test(\"Should have at least the products we added\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.data.totalElements).to.be.at.least(2);",
							"});"
						],
						"type": "text/javascript"
					}
				}
