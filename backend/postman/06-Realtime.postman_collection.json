{
	"info": {
		"_postman_id": "realtime-collection-id",
		"name": "06 - Tempo Real (WebSocket/SSE)",
		"description": "Collection para testes de funcionalidades em tempo real",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Server-Sent Events (SSE)",
			"item": [
				{
					"name": "Stream de Eventos SSE",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "text/event-stream"
							},
							{
								"key": "Cache-Control",
								"value": "no-cache"
							}
						],
						"url": {
							"raw": "{{base_url}}/realtime/stream",
							"host": ["{{base_url}}"],
							"path": ["realtime", "stream"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Testes de Conectividade",
			"item": [
				{
					"name": "Ping",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"timestamp\": \"{{$timestamp}}\",\n    \"message\": \"ping from postman\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/realtime/ping",
							"host": ["{{base_url}}"],
							"path": ["realtime", "ping"]
						}
					},
					"response": []
				},
				{
					"name": "Estatísticas de Conexão",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/realtime/stats",
							"host": ["{{base_url}}"],
							"path": ["realtime", "stats"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Broadcast e Simulações",
			"item": [
				{
					"name": "Broadcast Manual",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/realtime/broadcast?message={{broadcast_message}}",
							"host": ["{{base_url}}"],
							"path": ["realtime", "broadcast"],
							"query": [
								{
									"key": "message",
									"value": "{{broadcast_message}}"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Iniciar Simulação",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/realtime/simulation/start",
							"host": ["{{base_url}}"],
							"path": ["realtime", "simulation", "start"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "WebSocket Messages",
			"item": [
				{
					"name": "Simular Lance via WebSocket",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"productId\": \"{{produto1_id}}\",\n    \"userId\": \"{{comprador1_user_id}}\",\n    \"amount\": 4300.00,\n    \"timestamp\": \"{{$timestamp}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/ws/bid",
							"host": ["{{base_url}}"],
							"path": ["ws", "bid"]
						}
					},
					"response": []
				},
				{
					"name": "Ping WebSocket",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userId\": \"{{user_id}}\",\n    \"timestamp\": \"{{$timestamp}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/ws/ping",
							"host": ["{{base_url}}"],
							"path": ["ws", "ping"]
						}
					},
					"response": []
				},
				{
					"name": "Mensagem de Teste WebSocket",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"type\": \"TEST\",\n    \"data\": {\n        \"message\": \"Mensagem de teste via Postman\",\n        \"timestamp\": \"{{$timestamp}}\"\n    }\n}"
						},
						"url": {
							"raw": "{{base_url}}/ws/test",
							"host": ["{{base_url}}"],
							"path": ["ws", "test"]
						}
					},
					"response": []
				},
				{
					"name": "Simulação WebSocket",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"type\": \"SIMULATION\",\n    \"data\": {\n        \"messageCount\": 10,\n        \"intervalMs\": 1000,\n        \"testType\": \"LOAD_TEST\"\n    }\n}"
						},
						"url": {
							"raw": "{{base_url}}/ws/simulation",
							"host": ["{{base_url}}"],
							"path": ["ws", "simulation"]
						}
					},
					"response": []
				},
				{
					"name": "Mensagem Genérica WebSocket",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"type\": \"CUSTOM\",\n    \"data\": {\n        \"customField\": \"valor personalizado\",\n        \"number\": 42,\n        \"array\": [1, 2, 3],\n        \"nested\": {\n            \"key\": \"value\"\n        }\n    }\n}"
						},
						"url": {
							"raw": "{{base_url}}/ws/generic",
							"host": ["{{base_url}}"],
							"path": ["ws", "generic"]
						}
					},
					"response": []
				}
			]
		}
	]
}