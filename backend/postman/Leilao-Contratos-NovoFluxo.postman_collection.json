			"name": "2. Buscar Usuários",
			"item": [
				{
					"name": "Buscar Usuários por Termo",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.success && response.data.length > 0) {",
									"        // Pegar o primeiro usuário que não é vendedor",
									"        const usuarioNaoVendedor = response.data.find(u => !u.isVendedor);",
									"        if (usuarioNaoVendedor) {",
									"            pm.environment.set('usuarioTesteId', usuarioNaoVendedor.id);",
									"            pm.environment.set('usuarioTesteNome', usuarioNaoVendedor.nome);",
									"            pm.environment.set('usuarioTesteEmail', usuarioNaoVendedor.email);",
									"            console.log('Usuário selecionado para teste:', usuarioNaoVendedor.nome);",
									"            console.log('É vendedor:', usuarioNaoVendedor.isVendedor);",
									"        } else {",
									"            console.log('Todos os usuários já são vendedores');",
									"        }",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
