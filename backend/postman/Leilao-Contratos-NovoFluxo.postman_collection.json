	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Gerar datas dinâmicas",
					"const now = new Date();",
					"const future = new Date();",
					"future.setMonth(future.getMonth() + 6); // 6 meses no futuro",
					"",
					"// Formato ISO para datetime-local",
					"const currentDateTime = now.toISOString().slice(0, 16);",
					"const futureDateTime = future.toISOString().slice(0, 16);",
					"",
					"pm.environment.set('currentDateTime', currentDateTime);",
					"pm.environment.set('futureDateTime', futureDateTime);",
					"",
					"// Log das datas geradas",
					"console.log('Data atual:', currentDateTime);",
					"console.log('Data futura:', futureDateTime);"
				]
			}
		}
