              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sellerId\": \"{{vendedorId}}\",\n  \"feeRate\": 0.10,\n  \"terms\": \"Contrato padrão para categoria eletrônicos\",\n  \"validFrom\": \"2024-01-01T00:00:00\",\n  \"validTo\": \"2024-12-31T23:59:59\",\n  \"categoria\": \"Eletrônicos\"\n}"
            },
            "url": {
              "raw": "{{adminUrl}}/contratos",
              "host": ["{{adminUrl}}"],
              "path": ["contratos"]
            },
            "description": "Cria um novo contrato (fluxo antigo - para vendedores existentes)"
          },
          "response": []
        },
