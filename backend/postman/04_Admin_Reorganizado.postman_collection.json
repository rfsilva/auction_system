  "item": [
    {
      "name": "Gestão de Contratos",
      "item": [
        {
          "name": "Listar Contratos",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data && response.data.content.length > 0) {",
                  "        pm.environment.set('contratoId', response.data.content[0].id);",
                  "        console.log('Contrato ID salvo: ' + response.data.content[0].id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{adminUrl}}/contratos?page=0&size=10&sort=createdAt&direction=desc",
              "host": ["{{adminUrl}}"],
              "path": ["contratos"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                },
                {
                  "key": "sort",
                  "value": "createdAt"
                },
                {
                  "key": "direction",
                  "value": "desc"
                }
              ]
            },
            "description": "Lista contratos com filtros (admin)"
          },
          "response": []
        },
        {
          "name": "Buscar Contratos com Filtros",
