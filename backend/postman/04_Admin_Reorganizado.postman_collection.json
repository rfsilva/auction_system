              "path": ["contratos"],
              "query": [
                {
                  "key": "status",
                  "value": "ACTIVE",
                  "description": "Status do contrato"
                },
                {
                  "key": "categoria",
                  "value": "Eletrônicos",
                  "description": "Categoria do contrato"
                },
                {
                  "key": "active",
                  "value": "true",
                  "description": "Se está ativo"
                },
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "5"
                }
