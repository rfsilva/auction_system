            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data) {",
                  "        pm.environment.set('contratoId', response.data.id);",
                  "        console.log('Contrato criado com ID: ' + response.data.id);",
                  "    }",
                  "}"
