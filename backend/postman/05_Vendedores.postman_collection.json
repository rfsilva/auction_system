					]
				},
				"description": "Lista apenas os vendedores ativos (para seleção em formulários)."
			}
		},
		{
			"name": "Buscar Vendedor ABC Importadora",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has success field\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('success');",
							"    pm.expect(jsonData.success).to.be.true;",
							"});",
							"",
							"pm.test(\"Vendedor has correct data\", function () {",
							"    const jsonData = pm.response.json();",
							"    const vendedor = jsonData.data;",
							"    pm.expect(vendedor).to.have.property('id');",
							"    pm.expect(vendedor).to.have.property('companyName');",
							"    pm.expect(vendedor.companyName).to.include('ABC');",
							"    pm.expect(vendedor).to.have.property('active');",
							"    pm.expect(vendedor).to.have.property('verificado');",
							"});",
							"",
							"pm.test(\"Vendedor is active and verified\", function () {",
							"    const jsonData = pm.response.json();",
							"    const vendedor = jsonData.data;",
							"    pm.expect(vendedor.active).to.be.true;",
							"    pm.expect(vendedor.verificado).to.be.true;",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{authToken}}",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "{{acceptType}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/vendedores/{{vendedorId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"vendedores",
						"{{vendedorId}}"
					]
				},
				"description": "Busca dados específicos do vendedor ABC Importadora."
			}
		},
