	"item": [
		{
			"name": "Listar Todos os Usuários",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has users list\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('success');",
							"    pm.expect(jsonData.success).to.be.true;",
							"    pm.expect(jsonData.data).to.be.an('array');",
							"    pm.expect(jsonData.data.length).to.be.greaterThan(0);",
							"});",
							"",
							"pm.test(\"Users have required fields\", function () {",
							"    const jsonData = pm.response.json();",
							"    const firstUser = jsonData.data[0];",
							"    pm.expect(firstUser).to.have.property('id');",
							"    pm.expect(firstUser).to.have.property('nome');",
							"    pm.expect(firstUser).to.have.property('email');",
							"    pm.expect(firstUser).to.have.property('status');",
							"    pm.expect(firstUser).to.have.property('roles');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{authToken}}",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "{{acceptType}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/admin/users",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"admin",
						"users"
					]
				},
				"description": "Lista todos os usuários do sistema com informações básicas."
			}
