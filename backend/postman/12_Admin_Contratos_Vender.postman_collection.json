		{
			"name": "Listar Todos os Contratos",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has contracts list\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('success');",
							"    pm.expect(jsonData.success).to.be.true;",
							"    pm.expect(jsonData.data).to.be.an('array');",
							"});",
							"",
							"pm.test(\"Contracts have required fields\", function () {",
							"    const jsonData = pm.response.json();",
							"    if (jsonData.data.length > 0) {",
							"        const firstContract = jsonData.data[0];",
							"        pm.expect(firstContract).to.have.property('id');",
							"        pm.expect(firstContract).to.have.property('seller_id');",
							"        pm.expect(firstContract).to.have.property('fee_rate');",
							"        pm.expect(firstContract).to.have.property('status');",
							"        pm.expect(firstContract).to.have.property('valid_from');",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
