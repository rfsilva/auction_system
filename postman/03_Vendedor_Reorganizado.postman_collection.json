      "item": [
        {
          "name": "Listar Meus Produtos",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data && response.data.content.length > 0) {",
                  "        pm.environment.set('produtoId', response.data.content[0].id);",
                  "        console.log('Produto ID salvo: ' + response.data.content[0].id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{vendedorUrl}}/produtos?page=0&size=10",
              "host": ["{{vendedorUrl}}"],
              "path": ["produtos"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            },
            "description": "Lista produtos do vendedor logado"
          },
          "response": []
        },
